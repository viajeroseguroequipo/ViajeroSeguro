<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DF03123C"
    android:visibility="visible"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="328dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:text="@string/tv1"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="80dp"
        android:text="@string/empe"
        android:textColor="#F5ECEC"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="130dp"
        android:onClick="Ingresar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_map" />

    <TextView
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="190dp"
        android:text="@string/empe_ci"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="210dp"
        android:layout_height="44dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="260dp"
        android:background="@drawable/borde_redondo"
        android:onClick="Siguiente"
        android:text="@string/BotonSiguiente"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="210dp"
        android:layout_height="44dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="310dp"
        android:background="@drawable/borde_redondo"
        android:text="@string/BotonSiguiente2"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="210dp"
        android:layout_height="44dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="360dp"
        android:background="@drawable/borde_redondo"
        android:text="@string/BotonSiguiente3"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button6"
        android:layout_width="210dp"
        android:layout_height="44dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="410dp"
        android:background="@drawable/borde_redondo"
        android:text="@string/BotonSiguiente4"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/button67"
        android:layout_width="210dp"
        android:layout_height="44dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="460dp"
        android:background="@drawable/borde_redondo"
        android:onClick="Salir"
        android:text="@string/BotonR"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>